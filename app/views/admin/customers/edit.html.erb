<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>プロフィール編集</h2>
<%= form_with model:@customer, url:"/admin/customers/#{@customer.id}", method: :patch, local:true do |f| %>

  <label for="inputName">last_name</label>
  <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"姓"%>
  
  <label for="inputName">first_name</label>
  <%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"名"%><br>
  
  <label for="inputName">last_name_kana</label>
  <%= f.text_field :last_name_kana, autofocus: true, id:"inputName", placeholder:"姓カナ"%>
  
  <label for="inputName">first_name_kana</label>
  <%= f.text_field :first_name_kana, autofocus: true, id:"inputName", placeholder:"名カナ"%><br>
  
  <label for="inputName">full_address</label>
  <%= f.text_field :full_address, autofocus: true, id:"inputName", placeholder:"住所"%><br>
  
  <label for="inputName">telephone_number</label>
  <%= f.text_field :telephone_number, autofocus: true, id:"inputName", placeholder:"電話番号"%><br>
  
  <label for="inputName">email</label>
  <%= f.text_field :email, autofocus: true, id:"inputName", placeholder:"メールアドレス"%><br>
  
  <%= f.radio_button :is_deleted, false %>
  <%= f.label :is_deleted, "有効" %>

  <%= f.radio_button :is_deleted, true %>
  <%= f.label :is_deleted, "退会" %><br>

  <%= f.submit "変更を保存" %><br>
  
  </div>
</div>
  
<% end %>